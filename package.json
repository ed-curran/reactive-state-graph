{
  "name": "ts-state-graph",
  "version": "0.1.2",
  "description": "",
  "type": "commonjs",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "./*"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "./dist"
  },
  "scripts": {
    "pack": "pnpm run build && npm pack ./dist --pack-destination .",
    "build": "tsup && cp package.json dist && cp README.md dist",
    "lint": "tsc --noEmit",
    "test": "ava",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@changesets/cli": "^2.27.1",
    "ava": "^6.0.1",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@legendapp/state": "2.1.4",
    "zod": "^3.22.4"
  },
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "target": "node18",
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "src/**/*.ts"
    ]
  },
  "ava": {
    "files": [
      "test/**/*",
      "!test/fixtures"
    ],
    "typescript": {
      "compile": "tsc",
      "rewritePaths": {
        "/": "build/"
      }
    }
  }
}
